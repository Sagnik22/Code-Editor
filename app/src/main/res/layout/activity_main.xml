<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/parent_layout" android:orientation="vertical">
    <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/user_code" android:layout_weight="1"
            android:hint="Write Your Code Here"/>
    <Button
            android:text="Run code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/run_btn" android:textSize="24sp"
            android:background="@color/colorPrimary"/>
</LinearLayout>